<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="180dp"
    android:background="@drawable/back_item"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/category_accessories"
            android:background="@color/white"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="10dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Baaz"
               android:textSize="14sp"
               android:textColor="#9E9E9E"/>

           <View
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="1dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Vaporizer"
               android:textSize="14sp"
               android:textColor="#EEE"/>

       </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Vaporizer"
            android:textSize="16sp"
            android:layout_marginStart="16sp"
            android:textStyle="bold"
            android:textColor="#FFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HyBrid"
                android:textSize="14sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THC:25% - 28% \n CBD: 0.5%"
                android:textSize="14sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#9E9E9E"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3 g"
            android:textSize="14sp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$28.29"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_dark"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

            <ImageButton
                android:src="@drawable/round_remove_24"
                android:layout_width="30dp"
                android:background="@drawable/back_white"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="1"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <ImageButton
                android:src="@drawable/round_add_24"
                android:layout_width="30dp"
                android:background="@drawable/back_red"
                android:layout_marginEnd="16dp"
                android:layout_height="30dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>